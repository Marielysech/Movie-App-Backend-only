    <label for="search">Search bar</label>
    <input type="text" id="search" name="search" placeholder="Search movies.." required>
    
    <span>
        <button type="submit">Search</button>
    </span>
</form>


<div>
  <% for (let i=0; i<movies.length; i++) { %>
  <span> 
      <img src="<%= movies[i].poster %>" alt="">
      <form action="/users/removefavorites/<%= movies[i].title %>" method="POST">
        <button type="submit">remove from favorites</button>
      </form> 
 </span>
  
  <% } %>
</div>
  

